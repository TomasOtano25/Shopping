@model Shopping.Data.Entities.Category
@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás segura de que quieres eliminar esto?</h3>
<div>
    <partial name="_CategoryDetails" />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
    </form>
</div>
